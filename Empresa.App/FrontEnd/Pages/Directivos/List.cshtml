@page
@model ListarDirectivos.ModelDirectivos
@{
}

<div class="text-center center">
    <h1>Listado de directivos</h1> 
</div>

<br/>
<br/>
<br/>
<a class="btn btn-success" asp-page="./Crear" data-toggle="tooltip" data-placement="top" title="Crear Directivo">
    <i class="fas fa-user-tie fa-2x"></i>
</a>
<br>
<br>
<br>
<table class="table">
    <tr>
        <th>NOMBRE</th>
        <th>APELLIDOS</th>
        <th>DOCUMENTO</th>
        <th>CARGO</th>        
        <th>CATEGORÍA</th>
        <th>DETALLE</th>
        <th>EDITAR</th>
        <th>ELIMINAR</th>
    </tr>
   @foreach (var directivo in Model.Directivos)
    {
       <tr>
        <td>@directivo.EmpleadoRef.PersonaRef.Nombre</td>
        <td>@directivo.EmpleadoRef.PersonaRef.Apellidos</td>
        <td>@directivo.EmpleadoRef.PersonaRef.Documento</td>
        <td>@directivo.EmpleadoRef.Cargo</td>
        <td>@directivo.Categoria</td>

        <td><a class="btn btn-info" asp-page="./Buscar" asp-route-IdDirectivo="@directivo.Id">
            <i class="fas fa-info-circle"></i>
            </a>
        </td>
        <td><a class="btn btn-warning" asp-page="./Actualizar" asp-route-IdDirectivo="@directivo.Id">
            <i class="fas fa-edit"></i>
            </a>
        </td>
        <td><a class="btn btn-danger" asp-page="./Eliminar" asp-route-IdDirectivo="@directivo.Id">
            <i class="fas fa-minus-circle"></i>
            </a>
        </td>
       </tr> 
    }
</table>
<br>
<br>
<a class="btn btn-primary" asp-page="./Index">
    <i class="fas fa-home"></i>
</a>