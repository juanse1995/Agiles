@page
@model BuscarUnCliente.BuscarModel
@{
    ViewData["Title"] = "Detalles cliente";
}
<h1>Información del cliente</h1>
<br>
<br>
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label for="name"><b>Nombres :</b></label>
                <input asp-for="Cliente_enc.PerRef.Nombre" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="last_name"><b>Apellidos :</b></label>
                <input asp-for="Cliente_enc.PerRef.Apellidos" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="nit"><b>Documento :</b></label>
                <input asp-for="Cliente_enc.PerRef.Documento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="date"><b>Fecha de nacimiento :</b></label>
                <input asp-for="Cliente_enc.PerRef.FechaNacimiento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="phone"><b>Teléfono :</b></label>
                <input asp-for="Cliente_enc.Telefono" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="company"><b>Empresa :</b></label>
                <input asp-for="Cliente_enc.EmpRef.Nombre" class="form-control" readonly></input>
            </div>
            <br>
            <div class="form-group">
                <input class="btn btn-success" type="button" onclick="window.location.replace('/Clientes/List')" value="Aceptar" />
            </div>
        </form>
    </div>
</div>
<br>