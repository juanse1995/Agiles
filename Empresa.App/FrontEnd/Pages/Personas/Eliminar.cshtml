@page
@model MyApp.Namespace.Personas.EliminarModel
@{
    ViewData["Title"] = "Eliminar persona";
}
<h1>Eliminar persona</h1>
<br>
<br>
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <!--<label asp-for="Persona.Persona_id" class="control-label"></label>
                <input asp-for="Persona.Persona_id" class="form-control" readonly></input>-->
                <label asp-for="Persona.Id" class="control-label"></label>
                <input asp-for="Persona.Id" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Nombre" class="control-label"></label>
                <input asp-for="Persona.Nombre" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Apellidos" class="control-label"></label>
                <input asp-for="Persona.Apellidos" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Documento" class="control-label"></label>
                <input asp-for="Persona.Documento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="Persona.FechaNacimiento" class="control-label"></label>
                <input asp-for="Persona.FechaNacimiento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger"/>
                <input class="btn btn-secondary" type="button" onclick="window.location.replace('/Personas/List')" value="Cancelar" />
            </div>
        </form>
    </div>
</div>