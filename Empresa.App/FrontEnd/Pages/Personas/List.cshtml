@page
@model Frontend.Pages.ListModelPersonas
@{
}

<div class="text-center center">
    <h1>Listado de personas</h1>
</div>

<br/>
<br/>
<br/>
<a class="btn btn-success" asp-page="./Crear">
    <i class="fas fa-user-plus"></i>
</a>
<br>
<br>
<br>
<table class="table">    
    <tr>
        <!--<th>ID</th>-->
        <th>NOMBRE</th>
        <th>APELLIDOS</th>
        <th>DOCUMENTO</th>
        <!--<th>FECHA NACIMIENTO</th>-->
        <th>DETALLE</th>
        <th>EDITAR</th>
        <th>ELIMINAR</th>
    </tr>

<table class="table">
   @foreach (var persona in Model.Persona)
    {
        <tr>
           <td>@persona.Id</td>
           <td>@persona.Nombre</td>
           <td align="left">@persona.Apellidos</td>
           <td align="left">@persona.Documento</td>
           <!--<td>@persona.FechaNacimiento</td>-->
           
           <td><a class="btn btn-info" asp-page="./Buscar" asp-route-IdPersona="@persona.Id">
                    <i class="fas fa-info-circle"></i>
                </a>
            </td>
            <td><a class="btn btn-warning" asp-page="./Actualizar" asp-route-IdPersona="@persona.Id">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td><a class="btn btn-danger" asp-page="./Eliminar" asp-route-IdPersona="@persona.Id">
                    <i class="fas fa-minus-circle"></i>
                </a>
            </td>
       </tr> 
    }
</table>
<br>
<br>
<a class="btn btn-primary" asp-page="./Index">
    <i class="fas fa-home"></i>
</a>