@page
@model DetallesEmpleado.DetallesModel
@{
    ViewData["Title"] = "Detalle Empleados";
}
<h1>Información del Empleado</h1>
<br>
<br>
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label for="name"><b>Nombres :</b></label>
                <input asp-for="empleado.PersonaRef.Nombre" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="last_name"><b>Apellidos :</b></label>
                <input asp-for="empleado.PersonaRef.Apellidos" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="nit"><b>Documento :</b></label>
                <input asp-for="empleado.PersonaRef.Documento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="date"><b>Fecha de nacimiento :</b></label>
                <input asp-for="empleado.PersonaRef.FechaNacimiento" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="sueldo"><b>Sueldo Bruto :</b></label>
                <input asp-for="empleado.SueldoBruto" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="cargo"><b>Cargo :</b></label>
                <input asp-for="empleado.Cargo" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <label for="company"><b>Empresa :</b></label>
                <input asp-for="empleado.EmpresaRef.Nombre" class="form-control" readonly></input>
            </div>
            <br>
            <div class="form-group">
                <input class="btn btn-success" type="button" onclick="window.location.replace('/Empleados/List')" value="Aceptar" />
            </div>
        </form>
    </div>
</div>
<br>